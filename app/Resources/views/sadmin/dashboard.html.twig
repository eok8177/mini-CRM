{% extends 'sadmin/base.html.twig' %}

{% block body %}

<h1 class="page-header">
	Dashboard
</h1>

<br>
<br>
<p>For cron, run: [ /cron/date ] like: <small>/cron/2016-10-01</small></p>
<br>

<h2>Statistics</h2>
<table class="table">
	<tr>
		<th>Club</th>
		<th>Date</th>
		<th>Sum in</th>
		<th>Sum out</th>
		<th>Saldo</th>
	</tr>
{% for key, item in statistics %}
	<tr>
		<td>{{clubs[item.idClub]}}</td>
		<td>{{item.dateStart|date("Y/m/d")}}</td>
		<td>{{item.sumIn}}</td>
		<td>{{item.sumOut}}</td>
		<td>{{item.saldo}}</td>
	</tr>
{% endfor %}
</table>

{% endblock %}

