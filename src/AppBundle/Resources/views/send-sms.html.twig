{% extends 'AppBundle::layout.html.twig' %}

{% block sidebar %}
{{ render(controller('AppBundle:Manager/Dashboard:sidebar', {'current':current})) }}
{% endblock %}

{% block content %}

<h1 class="page-header">Send SMS</h1>


<form action="" method="post" class="form-horizontal">

	<div class="form-group">
		<label class="col-sm-2 control-label" for="sms_phone">Номер</label>
		<div class="col-sm-10">
			<input type="text" id="sms_phone" name="phone" class="form-control" value="{{guest.phone}}">
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label" for="sms_messaage">Сообщение</label>
		<div class="col-sm-10">
			<input type="text" id="sms_messaage" name="message" maxlength="255" class="form-control">
		</div>
	</div>

	{# <input type="hidden" id="sms__token" name="sms[_token]" value=""> #}


	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input type="submit" value="Отправить" class="btn btn-default">
		</div>
	</div>

</form>


{% endblock %}

{% block styles %}
{% endblock %}
